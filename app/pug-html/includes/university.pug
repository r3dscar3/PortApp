  .portfolio-container
    .portfolio-bg.tpl
      img.port-bg.bg-1(src="images/uni-1-bg.png")
      img.port-bg.bg-2(src="images/uni-2-bg.png")
      img.port-bg.bg-3(src="images/uni-3-bg.png")
    .portfolio-hero
      .jumbotron
        .container
          .row.hero.justify-content-center.align-items-center
            .col-12
              .display-4.text-center
                | TU University
                small HubSpot CMS, Bootstrap, &amp; jQuery
          .row.justify-content-center.sub-section
            .col-lg-9
              .row.justify-content-center.align-items-md-center
                .col-12
                  .display-3.text-center(style="margin-top: 150px") Project Overview
                .col-md-4
