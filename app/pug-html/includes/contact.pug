#contact.overlay
  .close <i class="fa fa-times"></i>
  .container-fluid
    .row.justify-content-center.align-items-center
      .col-12.col-sm-9.col-md-7.col-lg-5
        h2.text-center.hidden-xs-down Say Hello!
        #formError.hidden-xs-up
          .alert.alert-danger.hidden Please make sure all fields are filled out
        .contact-form
          .panel.panel-default.bordered
            .panel-body
              #contactForm
                form#hello(role="form")
                  fieldset
                    .form-group
                      label.hidden-xs-up Name
                      input#name.form-control.required(name="Name" type="text" value="" placeholder="Name")
                    .form-group
                      label.hidden-xs-up Email
                      input#email.form-control.required(name="mailfrom" type="email" value="" placeholder="Email")
                    .form-group
                      label.hidden-xs-up Message
                      textarea#message.form-control.required(name="Message" rows="3" placeholder="Message")
                    input.btn.btn-inverse.btn-block.btn-lg(type="submit" value="Send" name="submit")
              #formSuccess.hidden-xs-up.text-center
                i.fa.fa-check-circle.fa-3x.text-success
