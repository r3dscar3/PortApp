#contact.overlay
  .close <i class="fa fa-times"></i>
  .container-fluid
    .row.justify-content-center.align-items-center
      .col-12.col-sm-9.col-md-7.col-lg-5
        h2.text-center.hidden-xs-down Say Hello!
        .contact-form
          .panel.panel-default.bordered
            .panel-body
              #contactForm
                form(action="http://pgdbend.com/cgi-bin/bluemail" enctype="multipart/form-data" method="POST" name="contact")
                  fieldset
                    .form-group
                      label.hidden Name
                      input.form-control(name="Name" type="text" value="" id="name" placeholder="Name")
                    .form-group
                      label.hidden Email
                      input.form-control(name="mailfrom" type="email" value="" placeholder="Email")
                    .form-group
                      label.hidden Message
                      textarea.form-control(name="Message" rows="3" placeholder="Message")
                    input(type="hidden" name="redirect" value="/")
                    input.btn.btn-inverse.btn-block.btn-lg(type="submit" value="Send" name="submit")
